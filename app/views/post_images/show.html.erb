<!-- ヘッダー部分 -->
<div class="container">
	<div style="text-align:center">
		<div class="show_photo">
			<%= attachment_image_tag @post_image, :image, format: 'jpeg', size: "600x400" %>
		</div>
	</div>


		<div class="title-comment">
			<h4><%= @post_image.title %></h4>タイトル表示予定
			<h5><%= @post_image.body %></h5>キャプション表示予定
		<!-- </div> -->


			<div>
				By <%= @post_image.user.name %><!-- 投稿したユーザー名表示予定 -->
				 <%= @post_image.created_at.strftime('%Y/%m/%d') %><!-- 日付表示予定 -->
			</div>
		<!-- 一旦ここにコメント表示させる -->

		</div>

		<h4>お試し</h4>
	</div>


<!-- 戻るボタンは右に設置したい -->
<!-- コメント一覧は左側に寄せたい。 -->
	<div style="text-align:center">
		<td align="right">
			<% if @post_image.user == current_user %>
				<%= link_to "削除", post_image_path(@post_image.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
			<% end %>

			<%= link_to "戻る", post_images_path %><br>
		</td>



			<!-- いいね機能部分テンプレート -->
			<div id="favorites_buttons_<%= @post_image.id %>">
				<%= render partial: 'favorites/favorite', locals: { post_images: @post_images} %>
			</div>


		<h4>コメント一覧</h4>
			<% @post_image.post_comments.each do |post_comment| %><br>
				<%= post_comment.user.name %>
				<%= post_comment.comment %>

					<% if post_comment.user == current_user %>
						<div>
							<%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete, class: "btn btn-danger pull-right" %>
						</div>
					<% end %>

			<% end %>


					<div>
					<!-- コメント投稿用フォーム -->
					<%= form_for [@post_image, @post_comment] do |f| %>
						<!-- <div class="row"> -->
							<!-- <div class="col-md-7"> -->
								<%= f.text_area :comment, rows:'3', class: "form-control",placeholder: "コメントはここに" %>
					</div>
						<!-- </div> -->
							<%= f.submit "送信する", class: "btn btn-success" %>
					<% end %>
	</div>

</div>

<!-- Google Map表示させる -->
<div class="map">
	<!DOCTYPE html>
	<html lang="ja">

	<head>
	<meta charset="UTF-8">
	<title>Sample_GoogleMap</title>

	<!-- 環境変数いれてる -->
	<script src="http://maps.google.com/maps/api/js?key=<%= ENV['MAP_KEY'] %>&language=ja"></script>

	<style>
	html { height: 90% }
	body { height: 100% }
	#map { height: 80%; width: 80%}
	</style>
	</head>

	<body>
	<div id="map"></div>

	<script>
	var MyLatLng = new google.maps.LatLng(35.6811673, 139.7670516);
	var Options = {
	 zoom: 15,      //地図の縮尺値
	 center: MyLatLng,    //地図の中心座標
	 mapTypeId: 'roadmap'   //地図の種類
	};
	var map = new google.maps.Map(document.getElementById('map'), Options);
	</script>

	</body>
	</html>

</div>