<div style="text-align:center">
	<h3>NEW POST</h3>

	<!-- 新規投稿画面 form_for使用-->
	  <%= form_for(@post_image) do |f| %>

	  	<%= f.attachment_field :image %>

	  	<h4>タイトル</h4>
	  	<%= f.text_field :title %>

	  	<h4>説明</h4>
	  	<%= f.text_area :body %>

	  	<%= f.submit 'シェアする' %>

	  <% end %>

</div>