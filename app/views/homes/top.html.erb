<div class="container">
	<div class="row">
		<div class="new">NEW POST！
		<!-- <div class="new"> -->
			<button type="button" class="btn btn-warning">
				<i class="fas fa-pen-square">
				<%= link_to "新規投稿", new_post_image_path %></i>
			</button>
		</div>
	</div>

	<!-- 検索機能 -->
	
	<!-- 新着投稿写真を9枚載せる。 -->

	<div class="row">
		<div class="photos">
			<% @post_images.each do |post_image| %>
				<div>
					<%= link_to post_image_path(post_image) do %>
						<%= attachment_image_tag post_image,:image, size: "250x200" %>
				</div>
					<% end %>

				<div>
					Photo By <strong><%= link_to post_image.user.name, user_path(post_image.user) %></strong>
				</div>
			<% end %>

		</div>
	</div>

		<%= paginate @post_images %>

	<br>

	<div style="text-align:right">
		<%= link_to "もっと見る", post_images_path %>
	</div>


</div>