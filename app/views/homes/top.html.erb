<h2>ここがTOPです！！！</h2>

	<h2>NEW POST！</h2>


	<button>
		<%= link_to "新規投稿", new_post_image_path %>
	</button>


	<!-- 新着投稿写真を9枚載せる。 -->

	<% @post_images.each do |post_image| %>
		<%= link_to post_image_path(post_image) do %>
			<%= attachment_image_tag post_image,:image, size: "400x400" %>
			Photo By <strong><%= post_image.user.name %></strong>
		<% end %>


	<% end %>

<br>

	<%= link_to "もっと見る", post_images_path %>
