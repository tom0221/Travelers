<div style= "text-align:center;">
	<h1>フォロワー一覧</h1>

		<% @user.follower_user.each do |user| %>
			<table>
			<tr>
			  <td>  <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "80x80" %></td>

			  <td>  <%= link_to user.name, user_path(user) %> </td>
			</tr>
			</table>
		<% end %>

</div>