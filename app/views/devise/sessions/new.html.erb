<div style="text-align:center">

  <h2>登録済みの方はこちらから</h2>


  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= render 'layouts/error_messages', model: f.object %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス'  %>
  </div>

　<br>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password" , placeholder: 'パスワード' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :情報を保存する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ユーザーログイン", class:"btn-orange" %>
  </div>
<% end %>


<!-- SNSログイン第二弾 -->
<br>
<i class="fab fa-facebook">
  <%= link_to "Facebookでログイン", user_facebook_omniauth_authorize_path,method: :post %></i>/
<i class="fab fa-google">
  <%= link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path,method: :post %></i>


</div>
